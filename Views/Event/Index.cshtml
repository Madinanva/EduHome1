@model EventVM
@{
    ViewData["Title"] = "Index";
}

<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>event</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Event Start -->
<div class="event-area three text-center pt-150 pb-150">
    <div class="container">
        <div class="row">
            @foreach (Event event1 in Model.Events)
            {

                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="single-event mb-60">
                        <div class="event-img">
                            <a asp-action="detail" asp-controller="event">
                                <img src="~/assets/img/event/@event1.Image" alt="event">
                                <div class="course-hover">
                                    <i class="fa fa-link"></i>
                                </div>
                            </a>
                            <div class="event-date">
                                <h3>@event1.Day.ToString("dd") <span>@event1.Month.ToString("MMM")</span></h3>
                            </div>
                        </div>
                        <div class="event-content text-left">
                            <h4><a asp-action="detail" asp-controller="event">@event1.Name</a></h4>
                            <ul>
                                <li><span>time:</span> @event1.Time</li>
                                <li><span>venue</span> @event1.Venue</li>
                            </ul>
                            <div class="event-content-right">
                                <a class="default-btn" asp-action="detail" asp-controller="event">join now</a>
                            </div>
                        </div>
                    </div>
                </div>      }


        </div>
    </div>
</div>
<!-- Event End -->
<!-- Subscribe Start -->
